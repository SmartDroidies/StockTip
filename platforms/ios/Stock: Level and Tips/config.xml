        <param name="ios-package" value="CDVLocalStorage" />
    </feature>
    <name>Stock: Level and Tips</name>
    <description>
        This aop provides the Daily Nifty Spot Level and useful long term and medium term stock tips.
    </description>
    <author email="smartdroidies@gmail.com" href="http://smartdroidies.com">
        SmartDroidies Team
    </author>
    <content src="index.html" />
    <access origin="*" />
