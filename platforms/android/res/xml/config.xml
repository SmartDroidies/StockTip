<?xml version='1.0' encoding='utf-8'?>
<widget id="com.smart.droid.stock.tip" version="0.1.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="UniversalAnalytics">
        <param name="android-package" value="com.danielcwilson.plugins.analytics.UniversalAnalyticsPlugin" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Cache">
        <param name="android-package" value="org.apache.cordova.plugin.cache.Cache" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="GCMPush">
        <param name="android-package" value="com.smart.droid.gcm.GCMPush" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SocialSharing">
        <param name="android-package" value="nl.xservices.plugins.SocialSharing" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="EmailComposer">
        <param name="android-package" value="de.appplant.cordova.emailcomposer.EmailComposer" />
    </feature>
    <icon density="mdpi" src="res/android/stock_mdpi.png" />
    <icon density="hdpi" src="res/android/stock_hdpi.png" />
    <icon density="xhdpi" src="res/android/stock_xhdpi.png" />
    <name>Nifty Spot Level</name>
    <description>
        This App provides the Daily Nifty Spot Level and useful long term and medium term stock tips.
    </description>
    <author email="smartdroidies@gmail.com" href="http://smartdroidies.com">
        SmartDroidies Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
